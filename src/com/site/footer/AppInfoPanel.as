package com.site.footer{import com.davidcaneso.framework.SimpleLink;import com.davidcaneso.singletons.tracking.google.SiteTracking;import flash.display.MovieClip;import flash.events.Event;import flash.events.MouseEvent;public class AppInfoPanel extends MovieClip	{		public var appleUrl:String;		public var googleUrl:String;		private var _closeButton:MovieClip;		private var _appleLinkButton:MovieClip;		private var _googleLinkButton:MovieClip;		public function AppInfoPanel()		{			_closeButton = this['closeButton'] as MovieClip;            _closeButton.buttonMode = true;            _closeButton.mouseChildren = false;            _closeButton.addEventListener(MouseEvent.ROLL_OVER, _closeInteraction);            _closeButton.addEventListener(MouseEvent.ROLL_OUT, _closeInteraction);            _closeButton.addEventListener(MouseEvent.CLICK, _closeInteraction);			_appleLinkButton = this['appleLinkButton'];            _appleLinkButton.buttonMode = true;			_appleLinkButton.mouseChildren = false;			_appleLinkButton.addEventListener(MouseEvent.CLICK, _linkInteraction);			_googleLinkButton = this['googleLinkButton'];            //_googleLinkButton.visible = false;            _googleLinkButton.buttonMode = true;			_googleLinkButton.mouseChildren = false;			_googleLinkButton.addEventListener(MouseEvent.CLICK, _linkInteraction);		}		private function _linkInteraction(e:MouseEvent):void		{			switch(e.target)			{				case _appleLinkButton:                    SiteTracking.instance.trackEvent('ios button', 'click', 'apple app store link');					SimpleLink.linkOut(appleUrl);					break;				case _googleLinkButton:                    SiteTracking.instance.trackEvent('android button', 'click', 'google play store link');                    SimpleLink.linkOut(googleUrl);					break;			}		}        private function _closeInteraction(e:MouseEvent):void        {            switch (e.type)            {                case MouseEvent.ROLL_OVER:                    _closeButton.gotoAndStop(2);                    break;                case MouseEvent.ROLL_OUT:                    _closeButton.gotoAndStop(1);                    break;                case MouseEvent.CLICK:                    dispatchEvent(new Event(Event.CLOSE));                    break;            }        }	}}