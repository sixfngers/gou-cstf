package com.site.ui{	import flash.display.*;	import flash.text.*;	import flash.events.*;	import flash.geom.Point;		import com.greensock.*	import com.greensock.easing.*		import com.davidcaneso.framework.Section;	import com.davidcaneso.framework.DevelopmentEnvironment	import com.davidcaneso.singletons.RuntimeAssets	import com.davidcaneso.singletons.Styling	import com.davidcaneso.singletons.XMLData	import com.davidcaneso.events.framework.DevelopmentEnvironmentEvent	import com.davidcaneso.events.framework.SiteManagerEvent;	import com.davidcaneso.events.framework.SectionEvent;	import com.davidcaneso.text.DynamicTextField;	import com.davidcaneso.framework.SimpleLink;	import com.davidcaneso.display.drawing.SquareArea;	import com.davidcaneso.display.buttons.BasicButton	import com.davidcaneso.display.buttons.LinkButton		import com.davidcaneso.loading.Preloader;	import com.site.sections.ProjectData;	import com.site.ui.ThumbLiveLinkButton		import com.davidcaneso.events.loading.PreloaderEvent;	public class ProjectDisplayPageButton extends BasicButton	{		private var _icon:Bitmap		private var _highlight:SquareArea				public function ProjectDisplayPageButton()		{			super(true)			mouseChildren = false						_icon = RuntimeAssets.instance.duplicateAsset('pageMarker');			_icon.visible = true						_highlight = new SquareArea(_icon.width, 2)			_highlight.y = _icon.height - _highlight.height						var _area = new SquareArea(_icon.width, _highlight.y + _highlight.height + 5)			_area.alpha = 0						addChild(_highlight)			addChild(_icon)			addChild(_area)		}				public function forceSelect(supressEvent:Boolean = false):void		{			_attemptButtonClick(supressEvent)		}				public function enableButton():void		{			super.enable()			_deselect()		}				public function disableButton():void		{			super.disable()		}				override protected function buttonRollOver():void		{			TweenMax.to(_icon, .3, {y:5, ease:Back.easeOut})		}				override protected function buttonRollOut():void		{			TweenMax.to(_icon, .3, {y:0, ease:Back.easeIn})		}				override protected function buttonClick():void		{			//	call _attemptButtonClick function			//	we cannot pass a parameter in this function			//	and follow the override convention			_attemptButtonClick()		}				private function _attemptButtonClick(supressEvent:Boolean = false):void		{			disableButton()			buttonRollOut()			_select()						if(!supressEvent)	dispatchEvent(new Event('paginationButtonClick', true, true))		}				protected function _select():void		{			TweenMax.to(_highlight, .3, {autoAlpha:1, y:_icon.height + 5, ease:Back.easeOut})		}				protected function _deselect():void		{			TweenMax.to(_highlight, .3, {autoAlpha:0, y:_icon.height - _highlight.height, ease:Back.easeIn})		}			}	}