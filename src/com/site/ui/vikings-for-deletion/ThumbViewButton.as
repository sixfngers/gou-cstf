package com.site.ui{	import flash.display.*;	import flash.text.*;	import flash.events.*;	import flash.geom.Point;		import com.greensock.*	import com.greensock.easing.*		import com.davidcaneso.framework.Section;	import com.davidcaneso.framework.DevelopmentEnvironment	import com.davidcaneso.singletons.RuntimeAssets	import com.davidcaneso.singletons.Styling	import com.davidcaneso.singletons.XMLData	import com.davidcaneso.events.framework.DevelopmentEnvironmentEvent	import com.davidcaneso.events.framework.SiteManagerEvent;	import com.davidcaneso.events.framework.SectionEvent;	import com.davidcaneso.text.DynamicTextField;	import com.davidcaneso.framework.SimpleLink;	import com.davidcaneso.display.drawing.SquareArea;	import com.davidcaneso.display.buttons.BasicButton	import com.davidcaneso.display.buttons.LinkButton		import com.davidcaneso.loading.Preloader;	import com.site.sections.ProjectData;			import com.davidcaneso.events.loading.PreloaderEvent;	public class ThumbViewButton extends BasicButton	{		private var _icon:Sprite		private var _squares:Array		private var _positions:Array		private var _rollOverSpacing:int = 2				public function ThumbViewButton()		{			super()			this.mouseChildren = false;						_icon = new Sprite()						_squares = [];			_positions = [];						var sq:SquareArea			for(var i:int = 0; i < 3; i++)			{				for(var ii:int = 0; ii < 3; ii++)				{					sq = new SquareArea(8, 4, 0, false)					sq.x = int(i * (sq.width + 1))					sq.y = int(ii * (sq.height+ 1))					_icon.addChild(sq)										_squares.push(sq)					_positions.push(new Point(sq.x, sq.y))				}			}						var _area:SquareArea = new SquareArea(_icon.width + (_rollOverSpacing * 2), _icon.height + (_rollOverSpacing * 2), 0, false)			_area.x = -_rollOverSpacing			_area.y = -_rollOverSpacing			_area.alpha = 0			addChild(_icon)			addChild(_area)					}				public function enableButton():void		{			super.enable()		}				public function disableButton():void		{			super.disable()		}				override protected function buttonRollOver():void		{			var sq:SquareArea			var row:int = 0;			var col:int = -1;			var xpos:int;			var ypos:int;						for(var i:int = 0; i < _squares.length; i++)			{				sq = _squares[i]								col++								xpos = _positions[i].x				ypos = _positions[i].y								if(row == 0)				{					xpos -= _rollOverSpacing				}								else if (row == 2)				{					xpos += _rollOverSpacing				}												if(col == 0)				{					ypos -= _rollOverSpacing				}				else if (col == 2)				{					ypos += _rollOverSpacing				}												TweenMax.to(sq, .2, {x:xpos, y:ypos})												if(col == 2)				{					row++;					col = -1;				}							}			//TweenMax.to(_icon, .3, {y:-5, ease:Back.easeOut})		}				override protected function buttonRollOut():void		{			var sq:SquareArea			var row:int = 0;			var col:int = -1;			var xpos:int;			var ypos:int;						for(var i:int = 0; i < _squares.length; i++)			{				col++								xpos = _positions[i].x				ypos = _positions[i].y								sq = _squares[i]				TweenMax.to(sq, .2, {x:xpos, y:ypos})								if(col == 3)				{					row++;					col = -1;				}			}						//TweenMax.to(_icon, .3, {y:0, ease:Back.easeIn})		}				override protected function buttonClick():void		{			buttonRollOut()			dispatchEvent(new Event('thumbViewButtonClick', true, true))		}							}	}