package com.site{    import com.davidcaneso.display.drawing.SquareArea;    import com.davidcaneso.framework.Sleeper;    import com.davidcaneso.singletons.StageReference;import com.davidcaneso.singletons.Styling;import com.davidcaneso.text.DynamicTextField;    import com.greensock.*;    import com.greensock.easing.*;    import flash.display.*;    import flash.events.*;    import flash.text.TextFieldAutoSize;    [SWF(backgroundColor=0x000000, frameRate=30, width=1024, height=768)]	public class SiteSleeper extends Sleeper	{		private var _area:SquareArea;		private var _bg:SquareArea;		private var _field:DynamicTextField;		public function SiteSleeper()		{			// constructor code			_className = 'SiteSleeper';			_showTraces = false		}				//	public methods		override public function destroy():void		{			classTrace('hit destroy');			_area.removeEventListener(MouseEvent.CLICK, handleSleeperClick);			_area = null;			super.destroy()		}				//	protected methods		override protected function setup():void		{			super.setup();			classTrace('hit setup');			_area = new SquareArea(100, 100, 0x000000, false);			_area.alpha = 0;			_area.tabEnabled = false            _area.buttonMode = true;			_area.addEventListener(MouseEvent.CLICK, handleSleeperClick);						_bg = new SquareArea(100, 100, 0x000000, false);			_bg.alpha = .86;						_field = new DynamicTextField(300, 0, Styling.instance.findFormat('sleeperFormat'), TextFieldAutoSize.LEFT);			_field.text = 'CLICK TO RE-ENTER SITE';							addChild(_bg);			addChild(_field);			addChild(_area);						this.alpha = 0;			this.visible = false;						handleResize();			StageReference.instance.stage.addEventListener(Event.RESIZE, handleResize);		}				protected override function animateIn():void		{			//	clear the listener so the sleeper button can be clicked			classTrace('hit animateIn');			TweenMax.to(this, 1, {autoAlpha:1, ease:Quad.easeIn})		}				protected override function animateOut():void		{			classTrace('hit animateOut');			TweenMax.to(this, 1, {autoAlpha:0, ease:Quad.easeOut})		}				// private methods		private function handleSleeperClick(e:MouseEvent):void		{			deactivateSleeper()		}				private function handleResize(e:Event = null):void		{			var s:Stage = StageReference.instance.stage;			var w:int = s.stageWidth;			var h:int = s.stageHeight;						_bg.width = w;			_bg.height = h;						_area.width = w;			_area.height = h;						_field.x = int((w - _field.width) * .5);			_field.y = int((h * .5) - 30);		}							}	}