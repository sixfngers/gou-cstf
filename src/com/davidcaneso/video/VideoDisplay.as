package com.davidcaneso.video {	import com.davidcaneso.display.drawing.SquareArea;	import flash.display.Sprite;	import flash.media.Video;	public class VideoDisplay extends Sprite	{		//properties		private var _video:Video;		private var _bg:SquareArea;		private var _maxWidth:int;		private var _maxHeight:int;		//constructor		function VideoDisplay(maxWidth:int,maxHeight:int,bgColor:Number)		{			_maxWidth = maxWidth;			_maxHeight = maxHeight;			_video = new Video(_maxWidth,_maxHeight);			_bg = new SquareArea(_maxWidth,_maxHeight,bgColor);			addChild(_bg);			addChild(_video);		}		public function clearDisplay():void		{			_video.clear();		}//		public function centerVideoAreaOnBg():void//		{//			_video.x = 0;//			_video.y = 0;//			_video.x = int(((_maxWidth - _video.width) * .5));//			_video.y = int(((_maxHeight - _video.height) * .5));//		}		//getters and setters		public function get maxWidth():int		{			return _maxWidth;		}		public function get maxHeight():int		{			return _maxHeight;		}		public function get video():Video		{			return _video;		}		public function get bg():SquareArea		{			return _bg;		}	}}