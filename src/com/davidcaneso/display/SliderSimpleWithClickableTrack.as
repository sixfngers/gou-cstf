package com.davidcaneso.display{	import flash.display.DisplayObject;	import flash.display.Sprite;	import flash.display.Stage;	import flash.events.MouseEvent;	public class SliderSimpleWithClickableTrack extends SliderSimple	{		protected var _track:DisplayObject;		//---------------------------------		//constructor		//---------------------------------		public function SliderSimpleWithClickableTrack(handle:DisplayObject,track:DisplayObject,stage:Stage,trackSize:int,orientation:String='horizontal',precise:Boolean=false)		{			super(handle,stage,trackSize,orientation,precise);			_track = track;			addChild(_track);			addChild(_handle);		}		override public function activate(withMouseWheel:Boolean=true):void		{			super.activate(withMouseWheel);			Sprite(_track).buttonMode = true;			Sprite(_track).addEventListener(MouseEvent.CLICK,_sliderClick);		}		override public function deactivate(suppressEvent:Boolean=false):void		{			super.deactivate(suppressEvent);			Sprite(_track).buttonMode = false;			Sprite(_track).removeEventListener(MouseEvent.CLICK,_sliderClick);		}		//---------------------------------;		//public methods		//---------------------------------		override public function destroy():void		{			deactivate(true);			super.destroy();		}		//---------------------------------		//getters & setters		//---------------------------------		public function get track():DisplayObject		{			return _track;		}		//---------------------------------		//private methods		//---------------------------------		private function _sliderClick(e:MouseEvent):void		{			var pct:int;			if (super._orientation == SliderSimple.ORIENTATION[0])			{				pct = Math.round(_track.mouseX / _trackSize * 100);			}			else			{				pct = Math.round(_track.mouseY / _trackSize * 100);			}			moveHandleToPercent(pct,true);		}	}}