package com.davidcaneso.display.buttons{	import com.davidcaneso.events.buttonEvent.ToggleButtonEvent;	// imports		public class ToggleButton extends BasicButton	{		//	properties		private var _isOn:Boolean;				//	constructor		public function ToggleButton(isOnAtCreation:Boolean, buttonEnabledAtCreation:Boolean = true):void		{			super(buttonEnabledAtCreation);			_isOn = isOnAtCreation;		}				// getters & setters		public function get isOn():Boolean		{			return _isOn;		}				//	protected methods		protected override function buttonClick():void		{			toggleState();		}				protected function toggleOn(supressEvent:Boolean = false):void		{			_isOn = true;			if(!supressEvent)	_notify();		}				protected function toggleOff(supressEvent:Boolean = false):void		{			_isOn = false;			if(!supressEvent)	_notify();		}				protected function toggleState():void		{			if(_isOn) 	toggleOff();			else 		toggleOn();		}				//	private methods		private function _notify():void		{			dispatchEvent(new ToggleButtonEvent(ToggleButtonEvent.UPDATE, _isOn));		}	}	}