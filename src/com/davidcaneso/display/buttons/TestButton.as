package com.davidcaneso.display.buttons{	import flash.text.TextFieldAutoSize;	import flash.text.TextField;	import flash.text.TextFormat;	import com.davidcaneso.display.drawing.SquareArea;		public dynamic class TestButton extends BasicButton	{		//	properties		private var _functionToCallOnClick:Function;		private var _area:SquareArea;		private static const butWidth:int = 30;				//	constructor		public function TestButton(color:Number = 0x000000, buttonLabel:String = null, functionToCallOnClick:Function = null)		{			_functionToCallOnClick = functionToCallOnClick;			_area = new SquareArea(butWidth, butWidth, color, false);			_area.alpha = .5;						var fmt:TextFormat = new TextFormat();				fmt.align = 'center';							if(buttonLabel != null){				var tf:TextField = new TextField();				tf.width = butWidth;								tf.selectable = false;				//tf.wordWrap = true;				tf.border = true;				tf.background = true;				tf.autoSize = TextFieldAutoSize.CENTER;				tf.text = buttonLabel;				tf.setTextFormat(fmt);				tf.y = -tf.height;				addChild(tf);							}						addChild(_area);						buttonMode = true;			mouseChildren = false;		}				override protected function buttonClick():void		{			if(_functionToCallOnClick != null)				_functionToCallOnClick();		}			}	}