package com.davidcaneso.display.buttons{		//	imports	import com.davidcaneso.framework.SimpleLink;		public class LinkButton extends BasicButton	{		//	properties		private var _href:String;		private var _supressLinkEvent:Boolean;		private var _windowName:String;				//	constructor		public function LinkButton(href:String, supressLinkEventOnClick:Boolean = false, windowName:String = '_blank', isEnabledAtCreation:Boolean = true):void		{			super(isEnabledAtCreation);			_href 				= href;			_supressLinkEvent 	= supressLinkEventOnClick;			_windowName 		= windowName;		}				// getters & setters		public function get href():String		{			return _href;		}				//	protected methods		override protected function buttonClick():void		{			SimpleLink.linkOut(_href, _supressLinkEvent, _windowName);		}			}		}