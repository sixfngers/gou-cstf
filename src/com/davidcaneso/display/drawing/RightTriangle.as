package com.davidcaneso.display.drawing{	import flash.display.Sprite;	import flash.geom.Point;		public class RightTriangle extends Sprite	{				private var _pointA:Point;		private var _pointB:Point;		private var _pointC:Point;		private var _hypot:Number;		private var _color:Number;		private var _area:Sprite;				public function RightTriangle(legLength0:int, legLength1:int, color:Number = 0x000000):void		{			_area = new Sprite();						_pointA = new Point(0, legLength0);			_pointB = new Point(0, 0);			_pointC = new Point(legLength1, 0);			_hypot 	= Math.sqrt( Math.pow( legLength0, 2) + Math.pow( legLength1, 2) );			_color = color;			_draw();						addChild(_area);		}		public function get area():Sprite		{			return _area;		}				public function get hypot():Number		{			return _hypot;		}						private function _draw():void		{			_area.graphics.beginFill(_color,1);			_area.graphics.moveTo(_pointA.x, _pointA.y);			_area.graphics.lineTo(_pointB.x, _pointB.y);			_area.graphics.lineTo(_pointC.x, _pointC.y);			_area.graphics.endFill();		}	}}