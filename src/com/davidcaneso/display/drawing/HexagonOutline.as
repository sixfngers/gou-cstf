package com.davidcaneso.display.drawing{	import flash.display.BlendMode;	import flash.display.Sprite;		public class HexagonOutline extends Sprite	{		private var _area:Sprite;				private var _outer:Hexagon;		private var _inner:Hexagon;				public function HexagonOutline(legLength:int, stroke:int, northSouth:Boolean = false, color:Number = 0x000000):void		{			_area = new Sprite();						_outer = new Hexagon(legLength, northSouth, color);			_inner = new Hexagon(legLength - stroke, northSouth, color);						_area.addChild(_outer);			_area.addChild(_inner);						addChild(_area);		}				public function knockout():void		{			_area.blendMode = BlendMode.LAYER;			_inner.blendMode = BlendMode.ERASE;		}				public function get area():Sprite		{			return _area;		}				public function get inner():Hexagon		{			return _inner;		}				public function get outer():Hexagon		{			return _outer;		}	}}