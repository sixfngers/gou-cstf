package com.davidcaneso.display.drawing{	import com.davidcaneso.display.TiledBitmap;	import flash.display.*;		public class SquareRoundedCorners extends Sprite	{		public function SquareRoundedCorners(cornerRadius:int, shapeWidth:int, shapeHeight:int, color:Number = 0x000000, alignCenter:Boolean = false):void		{			var cornerDiameter:int = int(cornerRadius * 2);						var shapes:Array = [	[										 [new CircularArea(cornerRadius, color, false), cornerRadius, cornerRadius]										,[new SquareArea(int(shapeWidth - cornerDiameter), cornerRadius, color), shapeWidth - (cornerDiameter + cornerRadius), cornerRadius]										,[new CircularArea(cornerRadius, color, false), 0, cornerRadius]									]																	,[										 [new SquareArea(shapeWidth, int(shapeHeight - (cornerRadius * 2)), color), shapeWidth, shapeHeight - (cornerDiameter + cornerRadius)]									]																		,[										 [new CircularArea(cornerRadius, color, false), cornerRadius, cornerRadius]										,[new SquareArea(int(shapeWidth - cornerDiameter), cornerDiameter, color), shapeWidth - (cornerDiameter + cornerRadius), cornerRadius]										,[new CircularArea(cornerRadius, color, false), 0, cornerRadius]									]																];						var area:TiledBitmap = new TiledBitmap(shapes);			addChild(area);						if(alignCenter)			{				area.x = -int(area.width * .5);				area.y = -int(area.height * .5);			}		}			}	}