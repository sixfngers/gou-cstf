package com.davidcaneso.display.drawing{	import flash.display.BlendMode;	import flash.display.Sprite;		public class SquareOutline extends Sprite	{		//	properties		private 	var _outer	:SquareArea;		private 	var _inner	:SquareArea;				//	constructor		public function SquareOutline(w:Number, h:Number, thicknessWidth:Number, thicknessHeight:Number, strokeColor:Number = 0x000000, fillColor:Number = 0x000000, alignCenter:Boolean = false):void		{			_outer = new SquareArea(w, h, strokeColor, alignCenter);			_inner = new SquareArea(w - thicknessWidth, h - thicknessHeight, fillColor, alignCenter);						if(alignCenter == false)			{				_inner.x = int(thicknessWidth * .5);				_inner.y = int(thicknessHeight* .5);			}						addChild(_outer);			addChild(_inner);		}				public function knockout():void		{			this.blendMode = BlendMode.LAYER;			_inner.blendMode = BlendMode.ERASE;		}		//getters and setters		public function get inner():SquareArea		{			return _inner;		}		public function get outer():SquareArea		{			return _outer;		}	}}