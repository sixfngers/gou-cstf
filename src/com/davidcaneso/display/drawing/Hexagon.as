package com.davidcaneso.display.drawing{	import flash.display.Sprite;	public class Hexagon extends Sprite	{		public var longLength:int;		public var shortLength:int;				public function Hexagon(legLength:int, northSouth:Boolean = false, color:Number = 0x000000):void		{			var coords:HexagonPoints = new HexagonPoints(legLength, northSouth);			longLength = coords.longLength;			shortLength = coords.shortLength;						this.graphics.moveTo(coords.points[i].x, coords.points[i].y);			this.graphics.beginFill(color, 1);						for(var i:int = 0; i < coords.points.length; i++)			{				this.graphics.lineTo(coords.points[i].x, coords.points[i].y);			}						this.graphics.endFill();		}	}}