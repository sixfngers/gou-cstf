package com.davidcaneso.display.drawing{	import flash.geom.Point;	public class HexagonPoints extends Object	{		public var sideLength:int;		public var shortLength:int;		public var longLength:int;		public var northSouth:Boolean;		public var points:Vector.<Point>;				public function HexagonPoints(legLength:int, northSouth:Boolean = false):void		{			sideLength = legLength;			northSouth = northSouth;			var hypot:int = sideLength;			var side1:int = int(sideLength * .5);			var side2:int = Math.sqrt(((hypot * hypot) - (side1 *  side1)));						shortLength 	= side2 * 2;			longLength	= sideLength * 2;						/*			trace(hypot)			trace(side1)			trace(side1 * side1)			trace(Math.pow(side1, 2))			trace((hypot * hypot) - (side1 *  side1))			trace(Math.sqrt(((hypot * hypot) - (side1 *  side1))))						trace(sideLength, side1, side2)			*/						var p0:Point = new Point(-side1, -side2);			var p1:Point = new Point(side1, -side2);			var p2:Point = new Point(sideLength, 0);			var p3:Point = new Point(side1, side2);			var p4:Point = new Point(-side1, side2);			var p5:Point = new Point(-sideLength, 0);						if(northSouth)			{				p0 = new Point(0, -sideLength);				p1 = new Point(side2, -side1);				p2 = new Point(side2, side1);				p3 = new Point(0, sideLength);				p4 = new Point(-side2, side1);				p5 = new Point(-side2, -side1);			}			 			points = new Vector.<Point>;			if(northSouth)	points.push(p1, p2, p3, p4, p5, p0);			else			points.push(p0, p1, p2, p3, p4, p5);		}			}}