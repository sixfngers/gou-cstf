package com.davidcaneso.display{	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.Sprite;	public class TiledBitmap extends Sprite	{		private var _container:Sprite;		private var _fullImage:Bitmap;		public function TiledBitmap(imageList:Array, displayAsBitmap:Boolean = true)		{			_container = new Sprite();			var iLimit:int = imageList.length;			var jLimit:int;			var piece:Sprite;			var xpos:int = 0;			var ypos:int = 0;			for (var i:int = 0; i < iLimit; i++)			{				jLimit = imageList[i].length;				for (var j:int = 0; j < jLimit; j++)				{					if ((j == 0))					{						xpos = 0;					}					piece = new Sprite();					piece.x = xpos;					piece.y = ypos;					piece.addChild(imageList[i][j][0]);					_container.addChild(piece);					if (imageList[i][j][1] > 0)					{						xpos +=  imageList[i][j][1];					}					else					{						xpos +=  imageList[i][j][0].width;					}					if ((j == (jLimit - 1)))					{						if (imageList[i][j][2] > 0)						{							ypos +=  imageList[i][j][2];						}						else						{							ypos +=  imageList[i][j][0].height;						}					}				}			}			var _fullImageBitmapData:BitmapData = new BitmapData(_container.width,container.height,true,0);			_fullImageBitmapData.draw(_container);			_fullImage = new Bitmap(_fullImageBitmapData);			if (displayAsBitmap)			{				addChild(_fullImage);				_container = null;			}			else			{				addChild(_container);			}		}		public function get container():Sprite		{			return _container;		}		public function get fullImage():Bitmap		{			return _fullImage;		}	}}