package com.davidcaneso.display{	import flash.display.DisplayObject;	import flash.display.Sprite;	import flash.display.Stage;	import flash.events.MouseEvent;	public class SliderWithClickableTrack extends Slider	{		//---------------------------------		//constructor		//---------------------------------		public function SliderWithClickableTrack(handle:DisplayObject,track:DisplayObject,stage:Stage,trackSize:int,orientation:String='horizontal',precise:Boolean=false)		{			super(handle,track,stage,trackSize,orientation,precise);			Sprite(_track).buttonMode = true;			//Sprite(_handle).addEventListener(MouseEvent.CLICK, sliderClick)			Sprite(_track).addEventListener(MouseEvent.CLICK,sliderClick);		}		//---------------------------------;		//public methods		//---------------------------------		override public function destroy():void		{			Sprite(_track).buttonMode = false;			//Sprite(_handle).removeEventListener(MouseEvent.CLICK, sliderClick)			Sprite(_track).removeEventListener(MouseEvent.CLICK,sliderClick);			super.destroy();		}		//---------------------------------		//private methods		//---------------------------------		private function sliderClick(e:MouseEvent):void		{			var pct:int;			if ((_orientation == ORIENTATION[0]))			{				pct = Math.round(_track.mouseX * 100 / _trackSize);			}			else			{				pct = Math.round(_track.mouseY * 100 / _trackSize);			}			moveHandleToPercent(pct,true);			//super._drag(e)			super._drop(e);		}	}}