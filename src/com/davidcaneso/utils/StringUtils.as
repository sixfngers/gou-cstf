package com.davidcaneso.utils{import com.davidcaneso.utils.StringUtils;public class StringUtils	{		//constructor		public function StringUtils():void		{		}		//methods		public static function removeSpaces(val:String):String		{			var limit:int = val.length;			var formatedString:String = '';			for (var i:int = 0; i < limit; i++)			{				if (val.substr(i,1) != ' ')				{					formatedString +=  val.substr(i,1);				}			}			return formatedString;		}        public static function removeHashesAndSlashes(val:String):String		{			var limit:int = val.length;			var formatedString:String = '';			for (var i:int = 0; i < limit; i++)			{				if (val.substr(i,1) != '#' && val.substr(i,1) != '/')				{					formatedString +=  val.substr(i,1);				}			}			return formatedString;		}		public static function removeLeadingSpaces(val:String):String		{			var limit:int = val.length;			var unformatedString:String = val;			var formatedString:String = '';			for (var i:int = 0; i < limit; i++)			{				if (val.substr(i,1) != ' ')				{					formatedString +=  unformatedString.substr(i,limit - i);					break;				}			}			return formatedString;		}		public static function removeTrailingSpaces(val:String):String		{			var limit:int =  -  val.length;			var unformatedString:String = val;			var formatedString:String = '';			for (var i:int = -2; i > limit + 1; i--)			{				if (val.substr(i,1) != ' ')				{					formatedString +=  unformatedString.substr(0, -  limit + (i + 1));					break;				}			}			return formatedString;		}				public static function escapeHashes(val:String):String		{            return val.replace("#", "%23");		}        public static function escapeSlashes(val:String):String        {            var urlEncodeForwardSlashedRegExp:RegExp = new RegExp("/", "gi");            var returnVal:String = val.replace(urlEncodeForwardSlashedRegExp, "%2F");            return returnVal;        }        public static function escapeHashesAndSlashes(val:String):String        {            var returnVal:String = StringUtils.escapeHashes(val);                returnVal = StringUtils.escapeSlashes(returnVal);            return returnVal;        }	}}