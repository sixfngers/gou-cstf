package com.davidcaneso.facebook.ui{	import com.davidcaneso.display.buttons.BasicButton;	import com.davidcaneso.facebook.FBConnect;	import com.davidcaneso.facebook.events.GraphEvent;	import com.davidcaneso.utils.LiveTrace;	// imports			public class LogoutButton extends BasicButton	{		//	properties		protected var _iconLoader:IconLoader;				private var _facebook:FBConnect;				//	constructor		public function LogoutButton():void		{			super(false);						_facebook = FBConnect.instance;			_facebook.addEventListener(GraphEvent.USER_TEST_COMPLETE, 	_handleUserTestComplete);						_iconLoader = new IconLoader();			addChild(_iconLoader);		}				public function enableButton():void		{			super.useHandCursor = true;			super.enable();		}				public function disableButton():void		{			super.useHandCursor = true;			super.disable();			buttonRollOut();		}				override public function destroy():void		{			resetThumb();			removeChild(_iconLoader);			_facebook.removeEventListener(GraphEvent.USER_TEST_COMPLETE, _handleUserTestComplete);			_facebook.removeEventListener(GraphEvent.LOGGED_IN, _handleLogin);						super.destroy();					}				protected function resetThumb():void		{			_iconLoader.resetIcon();		}				public function get facebook():FBConnect	{	return _facebook;	};				private function _handleUserTestComplete(e:GraphEvent):void		{			_facebook.removeEventListener(GraphEvent.USER_TEST_COMPLETE, _handleUserTestComplete);			_facebook.addEventListener(GraphEvent.LOGGED_IN, _handleLogin);						LiveTrace.output('LogoutButton _handleUserTestComplete :' + _facebook.loggedIn);			if(_facebook.loggedIn)	_handleLogin(null);		}				private function _handleLogin(e:GraphEvent):void		{			var url:String = _facebook.user.profileImageUrl;			LiveTrace.output('load users thumbnail image from' + url);						if(url.length > 0)	_iconLoader.loadIcon(url);		}			}	}