package com.davidcaneso.text{	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.Sprite;	public class TextBitmap	{		public function TextBitmap():void		{		}		public static function createBitmap(textValue:String,formatName: * ,smoothing:Boolean=false,fieldWidth:int=0,fieldHeight:int=0):Bitmap		{			var tf:DynamicTextField = new DynamicTextField(fieldWidth,fieldHeight,formatName);			tf.htmlText = textValue;			var container:Sprite = new Sprite  ;			container.cacheAsBitmap = true;			container.addChild(tf);			var bmpData:BitmapData = new BitmapData(container.width,container.height,true,0);			bmpData.draw(container);			return new Bitmap(bmpData,'auto',smoothing);		}	}}