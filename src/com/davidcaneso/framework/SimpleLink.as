package com.davidcaneso.framework {	import com.davidcaneso.events.framework.ExternalLinkEvent;	import com.davidcaneso.singletons.StageReference;	import flash.events.EventDispatcher;	import flash.net.URLRequest;	import flash.net.navigateToURL;	public class SimpleLink extends EventDispatcher	{		//constructor		public function SimpleLink():void		{		}		//public methods		//linkOut(url:String, windowName:String);		//@url= web address to link to if calling a js function insert a blank string		//@supressEvent= if true an ExternalLinkAttempt Event is dispatched on the stage so the site can sleep		//@windowName= name of the browser window to open		public static function linkOut(url:String,supressEvent:Boolean=false,windowName:String='_blank'):void		{			if (! supressEvent)			{				StageReference.instance.stage.dispatchEvent(new ExternalLinkEvent(ExternalLinkEvent.LINK_ATTEMPT));			}			var req:URLRequest = new URLRequest(url);			navigateToURL(req,windowName);		}	}}