package com.citw  {		import com.citw.Global;	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;		public class IntroVideo extends MovieClip {		var target;		public var cmd = true;				public function IntroVideo() {			// constructor code			stop();						target = this;						addEventListener(Event.ADDED_TO_STAGE, addedToStageHandler);		}				private function addedToStageHandler(e=null) {			trace("IntroVideo Added");						removeEventListener(Event.ADDED_TO_STAGE, addedToStageHandler);						target.stage.scaleMode = "noScale";			target.stage.align = "T";						dispatchEvent(new Event("FullscreenVideoStart", true));			target.stage.addEventListener(Event.RESIZE, onResize);			target.stage.addEventListener(MouseEvent.MOUSE_DOWN, kill);			addEventListener(Event.REMOVED_FROM_STAGE, kill);						onResize();			play();		}				public function onResize(e:Event = null) {				width = target.stage.stageWidth;			scaleY = scaleX;							if(height<target.stage.stageHeight) {				height = target.stage.stageHeight;				scaleX = scaleY;			}			x = 1600/2-width/2;			y = -Global.getY();		}				public function kill(e=null) {			dispatchEvent(new Event("FullscreenVideoCompleteInit", true));						if(!cmd) return;			cmd = false;						target.stage.removeEventListener(MouseEvent.MOUSE_DOWN, kill);			target.stage.removeEventListener(Event.RESIZE, onResize);			removeEventListener(Event.REMOVED_FROM_STAGE, kill);						dispatchEvent(new Event("FullscreenVideoComplete", true));		}	}	}